{
   "layout": "one-column",

   "areas": {
      "activities": [
         {
            "widget": "changelog-activity",
            "features": {
               "server": {
                  "url": "http://localhost:8007/api"
               },
               "categories": {
                  "resource": "backendCategories",
                  "include": [ "backend" ]
               },
               "repository": {
                  "action": "getBackendRepositories"
               },
               "getAll": {
                  "action": "getAllBackend"
               }
            }
         },
         {
            "widget": "changelog-activity",
            "features": {
               "server": {
                  "url": "http://localhost:8007/api"
               },
               "categories": {
                  "resource": "frontendCategories",
                  "include": [ "frontend" ]
               },
               "repository": {
                  "action": "getFrontendRepositories"
               },
               "getAll": {
                  "action": "getAllFrontend"
               }
            }
         }
      ],

      "content": [
         {
            "widget": "changelog-widget",
            "features": {
               "categories": {
                  "resource": "backendCategories"
               },
               "repository": {
                  "action": "getBackendRepositories"
               },
               "expandAll": {
                  "enabled": true,
                  "action": "getAllBackend"
               },
               "collapseAll": {
                  "enabled": true
               }
            }
         },
         {
            "widget": "changelog-widget",
            "features": {
               "categories": {
                  "resource": "frontendCategories"
               },
               "repository": {
                  "action": "getFrontendRepositories"
               },
               "expandAll": {
                  "enabled": true,
                  "action": "getAllFrontend"
               },
               "collapseAll": {
                  "enabled": true
               }
            }
         },
         {
            "widget": "amd:laxar-developer-tools-widget",
            "features": {
               "button": {
                  "enabled": false
               },
               "open": {
                  "onActions": [ "showDevTools" ],
                  "onGlobalMethod": "goDevelop"
               }
            }
         }
      ]
   }
}
