{
   "name": "changelog-activity",
   "description": "Provides a list of repositories and data about them",

   "integration": {
      "technology": "angular",
      "type": "activity"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "server", "categories" ],
      "properties": {
         "server": {
            "type": "object",
            "description": "The server which provides the repositories and changelogs",
            "properties": {
               "url": {
                  "type": "string"
               }
            }
         },
         "categories": {
            "type": "object",
            "description": "The resource with the repositories and changelogs",
            "properties": {
               "resource": {
                  "type": "string"
               }
            }
         },
         "repository": {
            "type": "object",
            "description": "Action to get all releases and changelogs of the requested repository",
            "properties": {
               "action": {
                  "type": "string"
               }
            }
         },
         "getAll": {
            "type": "object",
            "description": "Action to get all releases and changelogs",
            "properties": {
               "action": {
                  "type": "string"
               }
            }
         }
      }
   }
}
